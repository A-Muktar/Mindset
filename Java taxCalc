package com.codeWithA_Muktar;
/*
    The purpose of this code is to make a user
    enter his or her salary and get the exact amount
    of tax to pay.
 */
import java.util.Scanner;

class Tax {

    public static void main(String[] args) {
int amount; double tax;
        System.out.println("Enter your salary:");
//        the code below imported a java utility that allows the user to parse data.
        Scanner r = new Scanner(System.in);
//        this code allow the user to enter integer data
        amount = r.nextInt();
//        This statement will always execute if the amount entered is less than or equal to 20,000
        if (amount <= 20_000){
            System.out.println(" No tax value for " + amount);
        }
//      When salary of amount is greater than 20,000 the and less than or equal to 30,000, the tax amount is 15%
        else {
            if(amount > 20_000 && amount <= 30_000){
                tax = amount * 0.15;
            }
//      If user salary is greater than 30,000, the user tax payable is 30% of the salary
            else{
                tax = amount* 0.30;
            }
            System.out.println("The amount of your salary is " + amount);
            System.out.println( "Your tax is "+ tax);
        }
    }
}
